{
    "comments": {
        "lineComment": {
            "comment": "--"
        },
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "wordPattern": "[\\w_'][\\w_'\\d\\.]*",
    "onEnterRules": [
        {
            "beforeText": "^\\s*(syntax|axiom|theorem|macro|proof)",
            "action": {
                "indent": "indent"
            }
        },
        {
        "beforeText": "^\\s*have.*;\\s*(--.*)?$",
            "action": {
                "indent": "none"
            }
        },
        {
        "beforeText": "^\\s*have",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*(\\|-)",
            "action": {
                "indent": "outdent"
            }
        }
    ]
}