{
  "scopeName": "source.watson",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#macros" },
    { "include": "#operators" },
    { "include": "#comments" },
    { "include": "#strings" },
    {
      "begin": "\\b(module|syntax_category|syntax|macro|theorem|axiom)\\b",
      "beginCaptures": {
        "1": { "name": "keyword.other.watson" }
      },
      "patterns": [{ "include": "#comments" }],
      "end": "\\b([\\w_'][\\w_'\\d\\.]*)\\b",
      "endCaptures": {
        "1": { "name": "entity.name.function.watson" }
      },
      "name": "meta.command.watson"
    },
    {
      "begin": "\\b(by)\\b",
      "beginCaptures": {
        "1": { "name": "keyword.control.watson" }
      },
      "patterns": [{ "include": "#comments" }],
      "end": "\\b([\\w_'][\\w_'\\d\\.]*)\\b",
      "endCaptures": {
        "1": { "name": "entity.name.function.watson" }
      }
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "match": "\\b(end|qed|proof)\\b",
          "name": "keyword.other.watson"
        },
        {
          "match": "\\b(have)\\b",
          "name": "keyword.control.watson"
        },
        {
          "match": "\\b(todo)\\b",
          "name": "invalid.illegal.watson"
        },
        {
          "match": "(@kw|@template|@variable|@binding)\\b",
          "name": "keyword.other.watson"
        }
      ]
    },
    "macros": {
        "patterns": [
            {
                "match": "\\$[\\w_'][\\w_'\\d\\.]*\\b",
                "name": "constant.other.macro.watson"
            }
        ]
    },
    "comments": {
      "patterns": [
        {
          "begin": "--",
          "end": "\n",
          "name": "comment.line.double-dash.watson"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "(\\|-)|(::=)|(=>)|;|:",
          "name": "keyword.operator.watson"
        },
        {
          "match": "\\bassume\\b",
          "name": "keyword.operator.watson"
        }
      ]
    },
    "strings": {
        "patterns": [
            {
                "begin": "\"",
                "end": "\"",
                "name": "string.quoted.double.watson"
            }
        ]
    }
  }
}
